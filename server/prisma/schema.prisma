generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  username String @unique
  password String
}

model Game {
  id    Int     @id @default(autoincrement())
  player0 Int
  player1 Int
  player0score Int @default(0)
  player1score Int @default(0)
  winner Int?
  startedAt DateTime @default(now())
}